{
  "name": "logua",
  "description": "Logging utility for node.",
  "version": "2.1.2",
  "repository": "github:tobua/logua",
  "license": "MIT",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "debounce": "^1.2.0"
  },
  "type": "module",
  "main": "index.js",
  "source": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "padua": "^0.1.4"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ],
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
