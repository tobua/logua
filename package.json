{
  "name": "logua",
  "description": "Logging utility for node.",
  "version": "0.0.0-development",
  "repository": "github:tobua/logua",
  "license": "MIT",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "debounce": "^1.2.1"
  },
  "type": "module",
  "sideEffects": true,
  "main": "./index.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "source": "./index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "keywords": [
    "log",
    "node",
    "logging",
    "color"
  ],
  "devDependencies": {
    "padua": "^2.0.0",
    "strip-ansi": "^7.1.0"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!strip-ansi|ansi-regex|chalk).*/"
    ]
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 16"
  }
}
