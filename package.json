{
  "name": "logua",
  "version": "2.0.1",
  "description": "Logging utility for node.",
  "type": "module",
  "main": "./index.js",
  "source": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "padua test"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-console": 0
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    }
  },
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "padua": "^0.0.9"
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
